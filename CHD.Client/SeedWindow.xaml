<Window x:Class="CHD.Client.SeedWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Введите код доступа к настройкам" Height="200" Width="300" ResizeMode="NoResize"
        GotFocus="SeedWindow_OnGotFocus"
        Loaded="SeedWindow_OnLoaded"
        >
    <Grid>
        <StackPanel
            Orientation="Horizontal"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            >

            <PasswordBox
                Name="_passwordBox"
                Width="200"
                FontSize="16"
                MaxLength="18"
                Margin="2"
                PreviewKeyDown="UIElement_OnPreviewKeyDown"
                PasswordChanged="_passwordBox_OnPasswordChanged"
                KeyUp="_passwordBox_OnKeyUp"
            />
            
            <Button
                Content="Закрыть"
                Margin="2"
                Click="ButtonBase_OnClick"
                />

        </StackPanel>
    </Grid>
</Window>
